generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(uuid())
  username   String    @unique
  password   String
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  comments   Comment[] @relation("userComments")

  @@map("users")
}

model Comment {
  id         String   @id @default(uuid())
  content    String   @unique
  comment_by String
  comment_in String
  userId     String
  created_at DateTime @default(now())
  comments   User     @relation("userComments", fields: [userId], references: [id])

  @@map("comments")
}

